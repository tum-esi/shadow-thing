{
  "name": "shadow-thing",
  "version": "1.0.0",
  "description": "Creates and deploys a Thing based on its TD, like a proxy or alone",
  "author": "Professorship of Embedded Systems and Internet of Things",
  "license": "MIT",
  "main": "dist/virtual-thing",
  "types": "dist/virtual-thing.d.ts",
  "bin": {
    "shadow-thing": "dist/cli.js"
  },
  "files": [
    "dist/",
    "examples/",
    "virtual-thing.conf.json",
    "validation-schemas/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tum-esi/shadow-thing"
  },
  "keywords": [
    "wot",
    "iot",
    "thing",
    "thing description",
    "virtual",
    "digital twin"
  ],
  "devDependencies": {
    "@types/node": "10.12.5",
    "chai": "^4.2.0",
    "mocha": "^7.1.0",
    "tslint": "5.11.0",
    "typescript": "3.0.3"
  },
  "dependencies": {
    "@node-wot/binding-coap": "0.7.0-SNAPSHOT.5",
    "@node-wot/binding-http": "0.7.0-SNAPSHOT.5",
    "@node-wot/binding-mqtt": "0.7.0-SNAPSHOT.5",
    "@node-wot/binding-websockets": "0.7.0-SNAPSHOT.5",
    "@node-wot/core": "0.7.0-SNAPSHOT.5",
    "aedes": "0.39.0",
    "ajv": "6.5.5",
    "csv-writer": "1.5.0",
    "csvjson": "^5.1.0",
    "date-fns": "^2.16.1",
    "grubbs": "^1.3.2",
    "inquirer": "6.4.1",
    "is-utf8": "0.2.1",
    "json-pointer": "^0.6.1",
    "json-schema-faker": "^0.4.7",
    "json-schema-instantiator": "^0.4.8",
    "jsonld": "1.7.0",
    "mathjs": "^6.6.5",
    "winston": "3.1.0",
    "wot-typescript-definitions": "0.7.1-SNAPSHOT.1"
  },
  "scripts": {
    "preinstall": "npm run pre:default",
    "pre:windows": "rmdir /s /q thingweb.node-wot & rmdir /s /q node_modules & del /s /q /f package-lock.json",
    "pre:default": "rm -rf thingweb.node-wot && rm -rf node_modules && rm -rf package-lock.json",
    "start": "node dist/cli.js",
    "build": "tsc"
  }
}
